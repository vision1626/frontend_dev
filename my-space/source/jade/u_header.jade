- var production = true
if production
  - var image_path  = './tpl/hi1626/v2/images/'
else
  include ../public_inc/source/jade/head.jade
  - var image_path  = local_file_path+'/images/'

.profile-container
  .profile
    img(src="{avatar $home_user['uid'] b 1 $home_user['img_thumb']}").profile__icon
    h3 {$home_user['user_name']}
    span.profile__level LV.2
    .medal
      a(href="")
      a(href="")
      a(href="")
    p {if $home_user['introduce'] == ""}
      | 这个人太潮了，不屑于填写简介
      {else}
      | {$home_user['inroduce']}
      {/if}
    .profile__follow-btn
      {if $home_user['uid'] == $_FANWE['uid']}
      i.icon.icon-edit
      a(href="/settings/psersonal.html") 修改资料
      {else}
      .slider
        {if $home_user['is_follow'] == 0}
        span.success-fo 已关注
        i.icon.icon-follow
        span 关注Ta
        {else}
        span 取消关注
        i.icon.icon-android
        {/if}
      {/if}
  .content
    ul.content__actions
      {if $home_user['uid'] == $_FANWE['uid']}
      li
        i.icon.icon-news
        | 新动态
      {/if}
      li 
        i.icon.icon-heart
        | 喜欢
      li 
        i.icon.icon-publish
        | 发布
    ul.content__relationship
      li 
        i.icon.icon-fans
        | 粉丝
      li 
        i.icon.icon-following
        | 关注
