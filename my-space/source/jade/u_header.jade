script(type='text/javascript').
  $(document).ready(function () {
    window.uid = "{$home_user['uid']}";
    window.myid = "{$_FANWE['uid']}";
    window.isfollow = "{$home_user['is_follow']}";
    window.count = "{$count}";
    window.state = "";
    window.fans_count = "$home_user['fans']";
    window.follow_count = "$home_user['follows']";
    init_u_header();
  });
