<!--{template page/user/header}-->
section.login-panel
    article.form-sidebar.above-tablet
        .hand-logo
            i.icon.icon-hand
        img.logo(src="/tpl/hi1626/images/login/logo-1626-black.svg")
        p 全球潮品优选
        h5 关注我们
        .social-media
            a.weibo(href='http://weibo.com/city1626', target='_blank')
                i.icon.icon-weibo
            a.wechat
                i.icon.icon-wechat
                .wechat-qr
                    img(src='/tpl/hi1626/images/login/wechat-qr.png')

    article.form-container
        .hand-logo.below-tablet
            i.icon.icon-hand

        .switch-header
            .switch-container
                .form-header
                    label.form-title
                        span 重置密码

        .form-wrap
            form#form-reset(data-action='{u user/ajax_login}')
                ul
                    li.input-row
                        i.icon.icon-sml.icon-lock
                        input.inpset.input-password(type='password', value='', placeholder='6-12位新密码', maxlength='20', autocomplete='off')
                        a.icon.icon-sml.icon-unseen(data-id='pass-ind', title='显示/隐藏密码')
                    li.input-row
                        i.icon.icon-sml.icon-lock
                        input.inpset.input-password-again(type='password', value='', placeholder='确认新密码',maxlength='20', autocomplete='off')
                        a.icon.icon-sml.icon-unseen(data-id='pass-ind', title='显示/隐藏密码')
                .form-actions
                    .form-options
                    button#submitReset.button.large.disabled.full-width(type="button") 提    交

        .form-error
            i.icon.icon-sml.icon-error
            label

script.
    var uid = {$uid}

