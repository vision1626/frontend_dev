-var production = true
- var version = 'v2'
if production
  - var image_path = '{$_FANWE[site_url]}/tpl/hi1626/v2/images'
else
  - var local_file_path = '..'
  - var image_path  = local_file_path+'/images'

doctype html
html
  head(lang='en')
    //META
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1 maximum-scale=1, user-scalable=no')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='description')
    title
      //{if $_FANWE['nav_title']}{$_FANWE['nav_title']}{else}{$_FANWE['setting']['site_title']}{/if}

    if production
      :php
        $current_css[]  = './tpl/hi1626/v2/css/vendor/normalize.css';
        $current_css[]  = './tpl/hi1626/v2/css/404.css';
        $current_css[]  = './tpl/hi1626/v2/css/global.css';
        $current_css[]  = './tpl/hi1626/v2/css/global_header.css';
        $current_css[]  = './tpl/hi1626/v2/css/global_footer.css';
        $current_js[]   = './tpl/hi1626/v2/js/vendor/jquery-1.11.3.min.js';
        $current_js[]   = './tpl/hi1626/v2/js/global_footer.js';
        $current_js[]   = './tpl/hi1626/v2/js/global_header.js';
      link(rel="stylesheet", type="text/css", href="{css $current_css}", media="all")
      link(rel="icon", href="{$_FANWE['site_root']}favicon.ico", type="image/x-icon")
      script(src="{script $current_js}")
      script(type='text/javascript').
        var SITE_PATH = '{$_FANWE[site_root]}';
        var SITE_URL = '{$_FANWE[site_url]}';
        var TPL_PATH = '{TPL_PATH}';
        var PUBLIC_PATH = '{PUBLIC_PATH}';
        var MODULE_NAME = '{MODULE_NAME}';
        var ACTION_NAME = '{ACTION_NAME}';
        var COOKIE_PRE = "{$_FANWE['config']['cookie']['cookie_pre']}";
        var TPL_NAME = '{$_FANWE["setting"]["site_tmpl"]}';
        var IS_POSTING = false;
    else
      link( href="#{local_file_path}/css/vendor/normalize.css", rel="stylesheet", type="text/css", media="all")
      link( href="#{local_file_path}/css/global.css", rel="stylesheet", type="text/css", media="all")
      link( href="#{local_file_path}/css/global_header.css", rel="stylesheet", type="text/css", media="all")
      link( href="#{local_file_path}/css/global_footer.css", rel="stylesheet", type="text/css", media="all")
      link( href="#{local_file_path}/css/404.css", rel="stylesheet", type="text/css", media="all")
      script(src="#{local_file_path}/js/vendor/jquery-1.11.3.min.js")
    <!--[if lt IE 10]>
    :php
      $current_js_ie[] = './tpl/hi1626/v2/js/vendor/html5shiv.min.js';
      $current_js_ie[] = './tpl/hi1626/v2/js/vendor/placeholders.jquery.min.js';
    script(type='text/javascript',src="{script $current_js_ie}")
    <![endif]-->

  body
    //{template v2/views/public/global_header}

    .not-found
      .center-wrap
        .bg
          img(src='#{image_path}/404-bg.png')
        .text
          img(src='#{image_path}/404-text.gif')

    //{template v2/views/public/global_footer}
