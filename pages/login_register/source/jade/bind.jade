//{template v2/views/public/global_header}

section.login-panel

  include source/jade/includes/side-panel.jade

  article.form-container
    .hand-logo.below-tablet
      i.icon.icon-hand

    .after-bind
      .switch-header-social
        .switch-container-social
          .form-header.congrats
            label.form-title 恭喜你，1626登录成功！
      .form-container
        .above-input
          p
            | 绑定1626帐号，购物更安全哦！
      .form-actions
        button#showRegForm.button.large.always-blue.full-width(type="button") 绑定帐号
        h5
          a.text.skip-reg(data-href='') 跳过

    .switch-header-social(style='display:none')
      .switch-container-social
        .form-header.register
          label.form-title
            span 注册绑定
            img.logo(src="/tpl/hi1626/images/login/logo-1626-black.svg")
          a.switch.goto-login 已有帐号绑定
            i.icon.icon-sml.icon-switch
        .form-header.login
          label.form-title
            span 已有帐号绑定
          a.switch.goto-register 注册绑定
            i.icon.icon-sml.icon-switch
        .form-header.nickname
          label.form-title
            span 注册成功

    .form-wrap(style='display:none')
      form#form-login(data-action='{u user/ajax_login}')
        ul
          li.input-row
            i.icon.icon-sml.icon-user
            input.input-phone(type='text', value='', placeholder='请输入登录用户名 / 邮箱 / 手机号')
          li.input-row
            i.icon.icon-sml.icon-lock
            input.inpset.input-password(type='password', value='', placeholder='请输入密码')
            a.icon.icon-sml.icon-unseen(data-id='pass-ind', title='显示/隐藏密码')
        .form-actions
          .form-options
            input#remember.checkbox(type='checkbox', value='1', checked='checked', autocomplete='off')
            label(for='remember') 10天內免登录
            a.forget.text(href='{u user/forgetpassword}', title='忘记密码?', rel='nofollow') 忘记密码?
          button#submitLogin.button.large.disabled.full-width(type="button") 登    录
          h5
            a.text.skip-reg(data-href='') 跳过

      form#form-register(data-action='{u user/savebind}', autocomplete='off')
        ul
          li.input-row
            i.icon.icon-sml.icon-phone
            input.input-phone(type='text', value='', placeholder='请输入登录邮箱 / 手机号', autocomplete='off')
          li.input-row
            i.icon.icon-sml.icon-lock
            input.input-password(type='password', value='', placeholder='请输入密码', maxlength='20', autocomplete='off')
            a.icon.icon-sml.icon-unseen(title='显示/隐藏密码')
          li.input-row.captcha
            i.icon.icon-sml.icon-captcha
            input#captchaInput(type='text', value='', placeholder='请输入验证码', autocomplete='off', maxlength='5')
            a.captcha(style='')
          li#code_input.input-row(style='display:none')
            i.icon.icon-sml.icon-captcha
            input#mobCodeInput(type='text', value='', placeholder='短信中的验证码', autocomplete='off', maxlength='5')
        h5#resend_code(style='display: none')
        .form-actions
          .form-options
            input#agreed.checkbox(type='checkbox', value='1', checked='checked', autocomplete='off')
            label(for='agreed') 我已阅读并同意遵守
            a.text.show-terms(data-href='http://www.1626.com/about/privacy.html', style='float:none') 1626服务条款
          button#submitInfo.button.large.disabled.full-width(type="button") 立即注册
          h5
            a.text.skip-reg(data-href='') 跳过

      form#form-nickname(data-action='{u user/update_nickname}',autocomplete='off')
        .above-input
          p
            | 你现在的昵称是
            span.text.old-nickname {$bind_info['user_name']}
            br
            | 要做个性超人,怎么也得起个酷炫的名号吧!
        ul
          li.input-row
            i.icon.icon-sml.icon-user
            input.input-nickname(type='text', value='', placeholder='昵称', autocomplete='off', maxlength='20')
        .form-actions
          button#submitNickname.button.large.disabled.full-width(type="button") 确    定
          h5
            a.text.nickname-skip(data-href='') 跳过

    .form-error
      i.icon.icon-sml.icon-warning
      label
    input(name='rhash', value='{FORM_HASH}', type='hidden')

