      input.mobile.empty(maxlength='11',type="tel",placeholder='请输入手机号')
    .input_container.mail_box
      input.mail.empty(type="email",placeholder='邮箱')
    .input_container.pid_box
      input.pid.empty(maxlength='18',type="number",placeholder='请输入身份证号')

    .submit_button#submit_button
      span 确认提交

  section.after-draw
    .actions
      a.share #{text_9}
      a.replay #{text_10}

  section.popup
    .wrap
      .content
        p #{text_11}
      button.close



