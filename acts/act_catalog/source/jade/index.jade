#catalog

  section.intro
    article.select-city
      p #{text_1}
      .actions
        a.beijing #{text_2}
        a.shanghai #{text_3}
    article.instruction
      h4 #{text_4}
      p #{text_5}

  section.draw
    p.result #{text_7}


    img.scratch-result(src='../../../v2/images/homepage-specials.jpg')
    img.scratch-cover(src='../../../v2/images/xxx.jpg')
    .scratch
      .success
      .fail #{text_8}
    article
      h3 #{text_6}
      h1 1次

  form.user_form
    .input_container.name_box
      input.name.empty(maxlength='15',type="text",placeholder='请输入姓名')
